{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    "comma-dangle": [1, "only-multiline"],
    "import/newline-after-import": 1,
    "import/no-extraneous-dependencies": 0,
    "indent": [1, 2, { "SwitchCase": 1 }],
    "linebreak-style": [1, "unix"],
    "max-len": [1, 150],
    "no-console": 0,
    "no-var": 1,
    "no-octal": 0,
    "no-unused-vars": 1,
    "object-curly-spacing": 1,
    "quotes": [1, "single"],
    "semi": [1, "never"],
    "space-before-function-paren": 1,
    "strict": 1
  },
  "globals": {
    "assert": true,
    "describe": true,
    "it": true,
    "request": true
    }
}
